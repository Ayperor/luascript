#!/usr/bin/env python

Import("env")
Import('env_modules')

env_luascript = env_modules.Clone()

if not env.msvc:
    env_luascript['CXXFLAGS'].remove('-std=gnu++14')
    env_luascript.Append(CXXFLAGS=['-std=c++17'])
else:
    env_luascript['CXXFLAGS'].remove('/std:c++14')
    env_luascript.Append(CXXFLAGS=['/std:c++17'])

Export('env_luascript')

SConscript('lib/lua/SCsub')
SConscript('lib/antlr4/SCsub')
SConscript('parser/SCsub')
if env['tools']:
    SConscript('editor/SCsub')

env_luascript.add_source_files(env.modules_sources,'*.cpp')
